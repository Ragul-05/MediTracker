<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E8F5E9"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MedVision AI"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#212121"
            android:layout_marginBottom="4dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Parameter Analysis"
            android:textSize="18sp"
            android:textColor="#757575"
            android:layout_marginBottom="16dp" />

        <!-- Table -->
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="*"
            android:background="#FFFFFF"
            android:padding="12dp"
            android:elevation="2dp">

            <!-- Header Row -->
            <TableRow>
                <TextView
                    android:text="Parameter"
                    android:textStyle="bold"
                    android:padding="8dp"
                    android:textColor="#212121"
                    android:background="#C8E6C9" />
                <TextView
                    android:text="Value"
                    android:textStyle="bold"
                    android:padding="8dp"
                    android:textColor="#212121"
                    android:background="#C8E6C9" />
                <TextView
                    android:text="Range"
                    android:textStyle="bold"
                    android:padding="8dp"
                    android:textColor="#212121"
                    android:background="#C8E6C9" />
                <TextView
                    android:text="Status"
                    android:textStyle="bold"
                    android:padding="8dp"
                    android:textColor="#212121"
                    android:background="#C8E6C9" />
            </TableRow>

            <!-- Row 1 -->
            <TableRow>
                <TextView android:text="RBC" android:padding="8dp" />
                <TextView android:text="4.2" android:padding="8dp" />
                <TextView android:text="4.0–5.5" android:padding="8dp" />
                <TextView
                    android:text="✅ Normal"
                    android:textColor="#4CAF50"
                    android:padding="8dp" />
            </TableRow>

            <!-- Row 2 -->
            <TableRow>
                <TextView android:text="WBC" android:padding="8dp" />
                <TextView android:text="13.5" android:padding="8dp" />
                <TextView android:text="4.5–11.0" android:padding="8dp" />
                <TextView
                    android:text="⚠️ High"
                    android:textColor="#F44336"
                    android:padding="8dp" />
            </TableRow>

        </TableLayout>
    </LinearLayout>
</ScrollView>
